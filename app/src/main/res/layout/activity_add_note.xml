<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNoteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Add Note"
            app:titleTextColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/editTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="8dp"
            android:hint="Tytuł notatki"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Opis notatki"
            android:inputType="textMultiLine" />

        <RadioGroup
            android:id="@+id/radioGroupCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButtonCategory1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategoria 1" />

            <RadioButton
                android:id="@+id/radioButtonCategory2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategoria 2" />

            <!-- Dodaj więcej RadioButton zależnie od potrzeb -->

        </RadioGroup>

        <RadioGroup
            android:id="@+id/priorityRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioGroupCategory"
            android:layout_marginTop="16dp">

            <RadioButton
                android:id="@+id/lowPriorityRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Niski" />

            <RadioButton
                android:id="@+id/mediumPriorityRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Średni" />

            <RadioButton
                android:id="@+id/highPriorityRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wysoki" />
        </RadioGroup>
        <EditText
            android:id="@+id/dateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/priorityRadioGroup"
            android:hint="Select date"
            android:inputType="date"
            android:visibility="gone"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:onClick="showDatePickerDialog" />

        <EditText
            android:id="@+id/timeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateEditText"
            android:hint="Select time"
            android:visibility="gone"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Zapisz" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>